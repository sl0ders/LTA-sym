{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}
{% block body %}
    <div class="admin-home text-center mt-5 font-weight-bold">
        <div class="d-flex">
            <a href="{{ path('home') }}">
                <img src="{{ asset('images/return.png') }}" class="m-2 p-2" width="70" height="60" alt="">
            </a>
            <h1 class="mb-5 m-auto">Votre administration</h1>
        </div>
        <div class="container-fluid">
            <div class="row d-flex justify-content-center">
                <div class="case-stock col-md-3 m-3 border rounded rgba-light-green-light">
                    <a class="text-decoration-none" href="{{ path('user_profile_detail', {'name' : user.firstname}) }}">
                        <h3 class="text-center font-weight-bold mt-3">Gestion de votre compte</h3>
                        <img src="{{ asset('images/svg/gestion_user.png') }}" width="60%" alt="Gestion des stock"></a>
                </div>
                <div class="case-contact col-md-3 m-3 border rounded rgba-light-blue-light">
                    <a class="text-decoration-none" href="{{ path('user_orders', {'name' : user.firstname}) }}">
                        <h3 class="text-center font-weight-bold mt-3">Gestion de vos commandes</h3>
                        <img src="{{ asset('images/gestion_order.png') }}" width="60%" alt="Gestion des contacts"></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



