{% extends 'base.html.twig' %}

{% block title %}Commande n°{{ order.nCmd }}{% endblock %}

{% block body %}
    <div class="d-flex">
        <a href="{{ path('user_orders', {"name" : app.user.firstname}) }}">
            <img src="{{ asset('images/return.png') }}" class="m-2 p-2" width="70" height="60" alt="">
        </a>
        <div class="h1 m-auto"> Commande n°{{ order.nCmd }}</div>
    </div>
    <div class="responsive-table-line" style="margin:0 auto;max-width:1700px;">
        <table class="table table-bordered table-condensed table-body-center">
            <tbody>
            <tr>
                <th>Produit</th>
                <td>{{ order.products }}</td>
            </tr>
            <tr>
                <th>Quantitée</th>
                <td>{{ order.quantity }}</td>
            </tr>
            <tr>
                <th>Crée le ...</th>
                <td>{{ order.createdAt ? order.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}</td>
            </tr>
            <tr>
                <th>Validation</th>
                <td>{{ order.validation }}</td>
            </tr>
            <tr>
                <th>NCmd</th>
                <td>{{ order.nCmd }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    {{ include('Public/orders/_delete_form.html.twig') }}
{% endblock %}




