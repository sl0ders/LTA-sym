{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <h1>Orders index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Created_at</th>
                <th>Total</th>
                <th>Validation</th>
                <th>NCmd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.quantity }}</td>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ order.total }}</td>
                <td>{{ order.validation }}</td>
                <td>{{ order.nCmd }}</td>
                <td>
                    <a href="{{ path('admin_orders_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('admin_orders_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_orders_new') }}">Create new</a>
{% endblock %}
