{% extends 'base.html.twig' %}

{% block title %}Index de gestion des commandes{% endblock %}

{% block body %}
    <h1>Index de gestion des commandes</h1>

<div class="responsive-table-line" style="margin:0 auto;max-width:1700px;">
    <table class="table table-bordered table-condensed table-body-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantitée</th>
                <th>Crée le ...</th>
                <th>Total</th>
                <th>Validation</th>
                <th>NCmd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.quantity }}</td>
                <td>{{ order.createdAt ? order.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ order.total }}</td>
                <td>{{ order.validation }}</td>
                <td>{{ order.nCmd }}</td>
                <td>
                    <a href="{{ path('admin_orders_show', {'id': order.id}) }}"><img src="{{ asset('images/detail.png') }}" alt="detail"></a>
                    <a href="{{ path('admin_orders_edit', {'id': order.id}) }}"><img src="{{ asset('images/svg/edition.png') }}" alt="edition"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun élément enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('admin_orders_new') }}"><img src="{{ asset('images/svg/create.png') }}" alt="Création d'un élément"></a>
{% endblock %}
