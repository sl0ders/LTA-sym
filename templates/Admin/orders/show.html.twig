{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Orders</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order.quantity }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}</td>
            </tr>
            <tr>
                <th>Validation</th>
                <td>{{ order.validation }}</td>
            </tr>
            <tr>
                <th>NCmd</th>
                <td>{{ order.nCmd }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_orders_index') }}">back to list</a>

    <a href="{{ path('admin_orders_edit', {'id': order.id}) }}">edit</a>

    {{ include('Admin/orders/_delete_form.html.twig') }}
{% endblock %}
