{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.name }}{% endblock %}

{% block body %}
    <h1>Utilisateur {{ user.name }}</h1>

<div class="responsive-table-line">
    <table class="table table-bordered table-condensed table-body-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ user.active }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Date de creation du compte</th>
                <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            {% if user.adresse %}
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Avatar</th>
                <td><img src="/images/{{ user.avatar }}" alt="avatar"></td>
            </tr>
        </tbody>
    </table>
</div>
    <a href="{{ path('admin_user_index') }}"><img src="{{ asset('images/svg/return.png') }}" alt="return"></a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><img src="{{ asset('images/svg/edition.png') }}" alt="édition"></a>

    {{ include('Admin/user/_delete_form.html.twig') }}
{% endblock %}
