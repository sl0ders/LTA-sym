{% extends 'base.html.twig' %}

{% block title %}Produit {{ product.name }}{% endblock %}

{% block body %}
    <div class="d-flex">
        <a href="{{ path('admin_product_index') }}">
            <img src="{{ asset('images/return.png') }}" class="m-2 p-2" width="70" height="60" alt="">
        </a>
        <div class="h1 m-auto">Produit</div>
    </div>

    <div class="responsive-table-line" style="margin:0 auto;max-width:1700px;">
        <table class="table table-bordered table-condensed table-body-center">
        <tbody>
            <tr>
                <th class="text-center align-middle">Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th class="text-center align-middle">Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th class="text-center align-middle">Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th class="text-center align-middle">Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th class="text-center align-middle">Grande image</th>
                <td><img src="/images/products/{{ product.filenameJpg }}" alt="" width="20%"></td>
            </tr>
            <tr>
                <th class="text-center align-middle">Petite image</th>
                <td><img src="/images/products/{{ product.filenamePng }}" alt="" width="15%"></td>
            </tr>
            <tr>
                <th class="text-center align-middle">Unitée de vente</th>
                <td>{{ product.Unity }}</td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="d-flex justify-content-center" title="Éditer">
        <a href="{{ path('admin_product_edit', {'id': product.id}) }}"><img src="{{ asset('images/svg/edition.png') }}" alt="edition"></a>
    </div>
    {{ include('Admin/product/_delete_form.html.twig') }}
{% endblock %}
